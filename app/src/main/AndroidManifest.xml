<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewDUTMed"
        tools:targetApi="31">

        <!-- MainActivity needs to be declared and typically should be exported if it's an entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".ClientProfileActivity"
            android:exported="true" />
        <activity
            android:name=".AdminProfileActivity"
            android:exported="true" />
        <activity
            android:name=".ClientMainActivity"
            android:exported="true" />
        <activity
            android:name=".AdminMainActivity"
            android:exported="true" />
        <activity
            android:name=".AdminRegister"
            android:exported="true" />
        <activity
            android:name=".ClientRegister"
            android:exported="true" />
        <activity
            android:name=".AdminLogin"
            android:exported="true" />
        <activity
            android:name=".ClientLogin"
            android:exported="true" />

        <!-- RoleSelectionPage is the launcher activity and should be exported -->
        <activity
            android:name=".RoleSelectionPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
